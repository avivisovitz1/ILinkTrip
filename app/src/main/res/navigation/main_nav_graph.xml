<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/mainNavigatorFragment">

    <fragment
        android:id="@+id/tripsFeedFragment"
        android:name="com.example.ilinktrip.modules.tripsFeed.TripsFeedFragment"
        android:label="Trips Nearby"
        tools:layout="@layout/fragment_trips_feed_list">
        <action
            android:id="@+id/action_tripsFeedFragment_to_tripDetailsFragment"
            app:destination="@id/tripDetailsFragment" />
        <argument
            android:name="showOnlyUserTrips"
            android:defaultValue="false"
            app:argType="boolean" />
        <action
            android:id="@+id/action_tripsFeedFragment_to_addTripFragment"
            app:destination="@id/addTripFragment" />
    </fragment>
    <fragment
        android:id="@+id/tripDetailsFragment"
        android:name="com.example.ilinktrip.modules.tripsFeed.tripDetails.TripDetailsFragment"
        android:label="Trip Details"
        tools:layout="@layout/fragment_trip_details">
        <argument
            android:name="userDetails"
            app:argType="com.example.ilinktrip.entities.User" />
        <argument
            android:name="isFavorite"
            app:argType="boolean"
            android:defaultValue="false" />
        <argument
            android:name="trip"
            app:argType="com.example.ilinktrip.entities.Trip" />
    </fragment>
    <fragment
        android:id="@+id/addTripFragment"
        android:name="com.example.ilinktrip.modules.addTrip.AddTripFragment"
        android:label="Add New Trip"
        tools:layout="@layout/fragment_add_trip" >
        <argument
            android:name="trip"
            app:argType="com.example.ilinktrip.entities.Trip"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.ilinktrip.modules.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_tripsFeedFragment"
            app:destination="@id/tripsFeedFragment" >
            <argument
                android:name="showOnlyUserTrips"
                android:defaultValue="true" />
        </action>
        <action
            android:id="@+id/action_profileFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_profileFragment_to_favoriteTravelersListFragment"
            app:destination="@id/favoriteTravelersListFragment" />
    </fragment><action android:id="@+id/action_global_profileFragment" app:destination="@id/profileFragment"/>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.ilinktrip.modules.registerUser.RegisterFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_register">
        <argument
            android:name="userDetails"
            android:defaultValue="@null"
            app:argType="com.example.ilinktrip.entities.User"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/favoriteTravelersListFragment"
        android:name="com.example.ilinktrip.modules.favoriteTravelersList.FavoriteTravelersListFragment"
        android:label="@string/my_favorites"
        tools:layout="@layout/fragment_travelers_list" />
    <fragment
        android:id="@+id/mainNavigatorFragment"
        android:name="com.example.ilinktrip.modules.mainNavigator.MainNavigatorFragment"
        android:label="fragment_main_navigator"
        tools:layout="@layout/fragment_main_navigator" >
        <action
            android:id="@+id/action_mainNavigatorFragment_to_tripsFeedFragment"
            app:destination="@id/tripsFeedFragment" >
            <argument
                android:name="showOnlyUserTrips"
                android:defaultValue="false" />
        </action>
    </fragment>
    <action
        android:id="@+id/action_global_tripsFeedFragment"
        app:destination="@id/tripsFeedFragment"
        app:popUpTo="@id/main_nav_graph"
        app:popUpToInclusive="true" />

</navigation>