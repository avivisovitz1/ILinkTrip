<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/tripsFeedFragment">

    <fragment
        android:id="@+id/tripsFeedFragment"
        android:name="com.example.ilinktrip.modules.tripsFeed.TripsFeedFragment"
        android:label="Trips Nearby"
        tools:layout="@layout/fragment_trips_feed_list">
        <action
            android:id="@+id/action_tripsFeedFragment_to_tripDetailsFragment"
            app:destination="@id/tripDetailsFragment" />
        <argument
            android:name="showOnlyUserTrips"
            android:defaultValue="false"
            app:argType="boolean" />
    </fragment>
    <fragment
        android:id="@+id/tripDetailsFragment"
        android:name="com.example.ilinktrip.modules.tripsFeed.TripDetailsFragment"
        android:label="Trip Details"
        tools:layout="@layout/fragment_trip_details">
        <argument
            android:name="country"
            android:defaultValue='""'
            app:argType="string" />
        <argument
            android:name="place"
            android:defaultValue='""'
            app:argType="string" />
        <argument
            android:name="startsAt"
            android:defaultValue='""'
            app:argType="string" />
        <argument
            android:name="duration"
            android:defaultValue="0"
            app:argType="integer" />
        <argument
            android:name="userDetails"
            app:argType="com.example.ilinktrip.models.User" />
        <argument
            android:name="isFavorite"
            app:argType="boolean"
            android:defaultValue="false" />
    </fragment>
    <fragment
        android:id="@+id/addTripFragment"
        android:name="com.example.ilinktrip.AddTripFragment"
        android:label="Add New Trip"
        tools:layout="@layout/fragment_add_trip" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.ilinktrip.modules.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_tripsFeedFragment"
            app:destination="@id/tripsFeedFragment" />
        <action
            android:id="@+id/action_profileFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_profileFragment_to_favoriteTravelersListFragment"
            app:destination="@id/favoriteTravelersListFragment" />
    </fragment><action android:id="@+id/action_global_profileFragment" app:destination="@id/profileFragment"/>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.ilinktrip.RegisterFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_register">
        <argument
            android:name="userDetails"
            android:defaultValue="@null"
            app:argType="com.example.ilinktrip.models.User"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/favoriteTravelersListFragment"
        android:name="com.example.ilinktrip.modules.favoriteTravelersList.FavoriteTravelersListFragment"
        android:label="@string/my_favorites"
        tools:layout="@layout/fragment_travelers_list" />

</navigation>